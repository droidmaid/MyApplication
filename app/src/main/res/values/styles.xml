    <style name="style_button_blue">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">@dimen/btn_height_xsmall</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/button_shape_round_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_margin">@dimen/edt_margin_normal</item>
        <item name="android:layout_alignParentEnd">@dimen/edt_margin_normal</item>
        <item name="android:paddingStart">@dimen/btn_padding_normal</item>
        <item name="android:paddingEnd">@dimen/btn_padding_normal</item>
        <item name="android:layout_alignParentStart">@dimen/edt_margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="style_button_choose_piture">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height_xsmall</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/button_shape_round_corner</item>
        <item name="android:gravity">center</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:layout_margin">@dimen/edt_margin_normal</item>
        <item name="android:paddingStart">@dimen/btn_padding_normal</item>
        <item name="android:paddingEnd">@dimen/btn_padding_normal</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="style_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edt_height_normal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/rounded_cell</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:layout_marginBottom">@dimen/edt_margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="style_button_match_parent">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/btn_height_normal</item>
        <item name="android:background">@drawable/custom_spinner_background</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:layout_marginTop">@dimen/edt_margin_normal</item>
        <item name="android:textDirection">locale</item>

    </style>

    <style name="style_edittext_none">
        <item name="android:focusable">false</item>
        <item name="android:inputType">none</item>
        <item name="android:focusableInTouchMode">false</item>
        <item name="android:background">@drawable/shape_round_corner</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_margin">@dimen/shape_round_corner_padding_corners</item>
        <item name="android:textSize">@dimen/text_size_xnormal</item>
        <item name="android:textColor">@color/silver</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>

    <style name="style_spinner_custom">
        <item name="android:layout_margin">@dimen/grid_item_padding</item>
        <item name="android:spinnerMode">dropdown</item>
        <item name="android:background">@drawable/custom_spinner_background</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
    </style>
</resources>

