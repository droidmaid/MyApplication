<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
    </style>

    <style name="ButtonContainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">#99000000</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="style_edittext">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edt_height_normal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/rounded_cell</item>
        <item name="android:gravity">start|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:maxLength">400</item>
        <item name="android:layout_marginBottom">@dimen/edt_margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:drawablePadding">@dimen/edt_padding_normal</item>
        <!--android:drawablePadding="@dimen/edt_padding_normal"-->
    </style>
    <style name="style_edittext2">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/edt_height_normal</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/rounded_cell</item>
        <item name="android:gravity">center|center_vertical</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:maxLength">400</item>
        <item name="android:layout_marginBottom">@dimen/edt_margin_normal</item>
        <item name="android:textDirection">locale</item>
        <item name="android:drawablePadding">@dimen/edt_padding_normal</item>
        <item name="android:paddingStart">5dp</item>
        <item name="android:paddingEnd">5dp</item>
    </style>
    <style name="style_edittext1">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">200dp</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:background">@drawable/rounded_cell</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:maxLength">400</item>
        <item name="android:lines">10</item>
        <item name="android:state_multiline">true</item>
        <item name="android:layout_marginBottom">@dimen/edt_margin_normal</item>
        <item name="android:textAlignment">viewStart</item>
        <item name="android:textDirection">locale</item>
        <item name="android:drawablePadding">@dimen/edt_padding_normal</item>
        <!--android:drawablePadding="@dimen/edt_padding_normal"-->
    </style>


